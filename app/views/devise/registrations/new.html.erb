<div class="signup-page-container">
  <div class="signup-header-section">
    <%= link_to root_path, class: "signup-back-btn" do %>
      <span class="material-symbols-rounded">arrow_back</span>
    <% end %>
    <h2 class="signup-page-title">Sign up</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if resource.errors.any? %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <% end %>
    <div class="signup-form">
      <div class="signup-form-group">
        <%= f.label :email, class: "signup-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-input" %>
      </div>
      <div class="signup-form-group">
        <div style="display: flex; align-items: center; gap: 8px;">
          <%= f.label :password, class: "signup-label" %>
          <% if @minimum_password_length %>
            <em class="signup-password-hint">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "signup-input" %>
      </div>
      <div class="signup-form-group">
        <%= f.label :password_confirmation, class: "signup-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-input" %>
      </div>
    </div>
    <div style="text-align: center; margin-top: 20px;">
      <%= f.submit "Sign up", class: "signup-submit-btn" %>
    </div>
  <% end %>
  <%# here, we'll have the "signin using" links %>
</div>
