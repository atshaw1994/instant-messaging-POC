<div class="header fixed top-0 left-0 w-full bg-white shadow-md z-40">
  <div class="container mx-auto px-5 py-3 flex justify-between items-center">
    <h1 class="text-2xl font-bold">Instant Messaging POC</h1>
    <% if user_signed_in? %>
      <div class="flex items-center space-x-4">
        <span class="font-medium"><%= current_user.email %></span>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "text-red-500 hover:text-red-700 bg-transparent border-none p-0 cursor-pointer", form: { class: "inline" } %>
      </div>
    <% else %>
      <div class="space-x-4">
        <%= link_to 'Login', new_user_session_path, class: "text-blue-500 hover:text-blue-700" %>
        <%= link_to 'Sign Up', new_user_registration_path, class: "text-green-500 hover:text-green-700" %>
      </div>
    <% end %>
  </div>
</div>
